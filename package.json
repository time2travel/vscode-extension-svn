{
    "name": "svn",
    "displayName": "SVN",
    "description": "simple svn implements for vscode.",
    "publisher": "Tianwu",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "svn.status",
                "title": "status",
                "category": "SVN",
                "icon": {
                    "light": "resources/icons/light/refresh.svg",
                    "dark": "resources/icons/dark/refresh.svg"
                }
            },
            {
                "command": "svn.addCommit",
                "title": "add",
                "category": "SVN",
                "icon": {
                    "light": "resources/icons/light/stage.svg",
                    "dark": "resources/icons/dark/stage.svg"
                }
            },
            {
                "command": "svn.removeCommit",
                "title": "revert",
                "category": "SVN",
                "icon": {
                    "light": "resources/icons/light/unstage.svg",
                    "dark": "resources/icons/dark/unstage.svg"
                }
            },
            {
                "command": "svn.commit",
                "title": "commit",
                "category": "SVN",
                "icon": {
                    "light": "resources/icons/light/check.svg",
                    "dark": "resources/icons/dark/check.svg"
                }
            },
            {
                "command": "svn.update",
                "title": "update",
                "category": "SVN",
                "icon": {
                    "light": "resources/icons/light/check.svg",
                    "dark": "resources/icons/dark/check.svg"
                }
            },
            {
                "command": "svn.openChange",
                "title": "change",
                "category": "SNV",
                "icon": {
                    "light": "resources/icons/light/open-change.svg",
                    "dark": "resources/icons/dark/open-change.svg"
                }
            },
            {
                "command": "svn.showBlame",
                "title": "SVN Blame",
                "category": "SVN"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "svn.status",
                    "when": "scmProvider == svn",
                    "group": "navigation"
                },
                {
                    "command": "svn.commit",
                    "when": "scmProvider == svn",
                    "group": "navigation"
                },
                {
                    "command": "svn.update",
                    "when": "scmProvider == svn",
                    "group": "navigation"
                }
            ],
            "scm/resourceGroup/context": [
                {
                    "command": "svn.addCommit",
                    "when": "scmProvider == svn && scmResourceGroup == change_file",
                    "group": "inline"
                },
                {
                    "command": "svn.removeCommit",
                    "when": "scmProvider == svn && scmResourceGroup == commit_file",
                    "group": "inline"
                }
            ],
            "scm/resourceState/context": [
                {
                    "command": "svn.addCommit",
                    "when": "scmProvider == svn && scmResourceGroup == change_file",
                    "group": "inline"
                },
                {
                    "command": "svn.removeCommit",
                    "when": "scmProvider == svn && scmResourceGroup == commit_file",
                    "group": "inline"
                }
            ],
            "editor/context": [
                {
                    "command": "svn.showBlame",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/sqlite3": "^3.1.3",
        "@types/xml2js": "^0.4.3",
        "sqlite3": "^4.0.4",
        "xml2js": "^0.4.19"
    }
}
